//edit()
bp = 990px

html
	::selection
		background #d04c3f
		color #fff
		
body
	position relative
	display flex
	height 100vh
	font-family 'Roboto' sans-serif
	font-size 16px
	+below(bp)
		flex-direction column
		font-size 16px
		
	
aside.barra-lateral
	background gray
	width 34%
	display flex
	justify-content center
	align-items center
	+below(bp)
		width auto
	
	
section.conteudo
	flex-grow 1
	display flex
	flex-direction column
	min-height 100vh
	+below(bp)
		min-height 100vh

	
	.display
		background Peachpuff
		padding-top 20px
		padding-left 20px
		padding-right 20px
		padding-bottom 70px
		display flex
		flex-direction column
		flex-grow 1
		+below(bp)
			padding-bottom 120px
		
	.insert
		background #f3f0ef
		width 74%
		padding 3px
		display flex
		position fixed
		bottom 0
		color #333
		align-items center
		+below(bp)
			padding .8rem 0
			width 100%
		
.info
	display flex
	flex-grow 1
	
.icon
	svg
		height 38px
		width auto
		fill #4a4a4a
		
		+below(bp)
			height 94px
			margin-right 20px
		

.input
	flex-grow 1
	margin 0 20px
	input 
		border-radius 5px
		width 96%
		padding 12px 2%
		border none
		border-spacing 0
		&:focus
			outline none
		+below(bp)
			font-size 2rem
			padding 4% 2%
			
		
.msg
	max-width 74%
	display block
	margin 15px 0
	border-radius 5px
	color #5a5a5a
	padding .7rem
	line-height 1.3rem
	+below(bp)
		padding 1.4rem
		line-height 1.5rem
	
.me
	align-self flex-end
	background #dcf8c6
.not-me
	background #fff
	align-self flex-start