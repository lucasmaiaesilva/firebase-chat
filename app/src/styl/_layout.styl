//edit()
bp = 990px

html
	::selection
		background #d04c3f
		color #fff
		
body
	display flex
	height 100vh
	font-family 'Roboto' sans-serif
	+below(bp)
		flex-direction column
		font-size 16px
		
	
aside.barra-lateral
	background gray
	width 34%
	display flex
	justify-content center
	align-items center
	+below(bp)
		width auto
	
	
section.conteudo
	background Peachpuff
	bg-cover
	flex-grow 1
	display flex
	flex-direction column
	min-height 100vh
	+below(bp)
		min-height calc(100vh - 100px)

	
	.display
		margin-top 20px
		margin-left 20px
		margin-right 20px
		display flex
		flex-direction column
		flex-grow 1
		
	.insert
		background #f3f0ef
		padding 0 20px
		display flex
		color #333
		height 60px
		align-items center
		+below(bp)
			padding 20px
		
.info
	display flex
	flex-grow 1
	justify-content space-around
	
.icon
	svg
		height 38px
		width auto
		fill #4a4a4a
		
		+below(bp)
			height 64px
		

.input
	flex-grow 1
	margin 0 20px
	input 
		border-radius 5px
		width 96%
		padding 12px 2%
		border none
		border-spacing 0
		&:focus
			outline none
		+below(bp)
			font-size 2.2em
		
.msg
	max-width 74%
	padding 14px
	margin 15px 0
	border-radius 5px
	color #5a5a5a
	line-height 1.3rem
	
.me
	align-self flex-end
	background #dcf8c6
.not-me
	background #fff
	align-self flex-start